@model IEnumerable<DDD.MVC.ViewModels.ProductViewModel>

@{
    ViewBag.Title = "Produto";
}

<h2>Produto</h2>

<p>
    @Html.ActionLink("Adicionar novo produto", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Available)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Available)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ProductId }) |
            @Html.ActionLink("Detalhar", "Details", new { id=item.ProductId }) |
            @Html.ActionLink("Apagar", "Delete", new { id=item.ProductId })
        </td>
    </tr>
}
</table>