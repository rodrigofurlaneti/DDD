@model DDD.MVC.ViewModels.ClientProductViewModel

@{
    ViewBag.Title = "Apagar cliente produto";
}

<h2>Apagar cliente produto</h2>

<h3>Tem certeza de que deseja excluir?</h3>
<div>
    <h4>Cliente produto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ClientId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Clients.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProductId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Products.Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Apagar" class="btn btn-sm btn-danger" /> |
            @Html.ActionLink("Voltar", "Index")
        </div>
    }
</div>
